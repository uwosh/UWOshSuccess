<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Anonymous"/>
    <role name="Authenticated"/>
    <role name="Manager"/>
    <role name="Member"/>
    <role name="Owner"/>
    <role name="UWOshSuccess.Director"/>
    <role name="UWOshSuccess.OfficeStaff"/>
    <role name="UWOshSuccess.Faculty"/>
    <role name="UWOshSuccess.LocalFaculty"/>
    <role name="UWOshSuccess.Reader"/>
    <role name="UWOshSuccess.Student"/>
  </roles>
  <permissions>
    <permission name="Access contents information"
                acquire="True">
      <role name="Contributor"/>
      <role name="Editor"/>
      <role name="Reader"/>
    </permission>

    <permission name="Access inactive portal content"
                acquire="True">
      <role name="Owner"/>
    </permission>

    <permission name="Add portal content" acquire="True">
      <role name="Contributor"/>
      <role name="Manager"/>
      <role name="Member"/>
      <role name="Owner"/>
    </permission>

    <permission name="CMFEditions: Checkout to location"
                acquire="True">
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Reviewer"/>
    </permission>

    <permission name="CMFEditions: Save new version"
                acquire="True">
      <role name="Contributor"/>
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Reviewer"/>
      <role name="SiteOwner"/>
      <role name="UWOshSuccess.Director"/>
      <role name="UWOshSuccess.Faculty"/>
      <role name="UWOshSuccess.LocalFaculty"/>
      <role name="UWOshSuccess.OfficeStaff"/>
      <role name="UWOshSuccess.Reader"/>
      <role name="UWOshSuccess.Student"/>
    </permission>

    <permission name="Delete objects" acquire="True">
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
    </permission>

    <permission name="List folder contents" acquire="True">
      <role name="Contributor"/>
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Member"/>
      <role name="Owner"/>
      <role name="Reader"/>
    </permission>

    <permission name="List undoable changes" acquire="True">
      <role name="Manager"/>
      <role name="Member"/>
    </permission>

    <permission name="Modify portal content" acquire="True">
      <role name="Editor"/>
      <role name="Owner"/>
    </permission>

    <permission name="Review portal content" acquire="True">
      <role name="Manager"/>
      <role name="Reviewer"/>
    </permission>

    <permission name="UWOshSuccess: edit faculty fields"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOshSuccess.LocalFaculty"/>
      <role name="UWOshSuccess.Director"/>
    </permission>

    <permission name="UWOshSuccess: edit office fields"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOshSuccess.OfficeStaff"/>
      <role name="UWOshSuccess.Director"/>
    </permission>

    <permission name="UWOshSuccess: edit reader field"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOshSuccess.OfficeStaff"/>
      <role name="UWOshSuccess.Director"/>
      <role name="UWOshSuccess.Reader"/>
    </permission>

    <permission name="UWOshSuccess: edit student fields"
                acquire="True">
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="UWOshSuccess.OfficeStaff"/>
      <role name="UWOshSuccess.Director"/>
    </permission>

    <permission name="Undo changes" acquire="True">
      <role name="Manager"/>
      <role name="Owner"/>
    </permission>

    <permission name="View" 
		acquire="True">
      <role name="Owner"/>
      <role name="UWOshSuccess.Director"/>
      <role name="UWOshSuccess.OfficeStaff"/>
      <role name="UWOshSuccess.LocalFaculty"/>
      <role name="UWOshSuccess.Reader"/>
    </permission>

    <permission name="View management screens"
                acquire="True">
      <role name="Manager"/>
      <role name="Owner"/>
    </permission>

    <permission name="Add ATVocabularyManager content"
		acquire="True">
      <role name="Manager"/>
      <role name="UWOshSuccess.Director"/>
      <role name="UWOshSuccess.OfficeStaff"/>
    </permission>
      
  </permissions>
</rolemap>
